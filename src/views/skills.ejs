    <div class="content">
      <h1 class="header-title">Skills &#128165;</h1>

      <div class="row">
        <div class="col-xs-12 col-sm-6 col-md-4">
          <div class="card mb-5">
            <h3 class="header-title">Web Development</h3>
            <% skills_1.forEach(skill => { %>
              <div class="skill-container">
                <h4>
                  <% if (skill.link) { %>
                    <a href="<%= skill.link %> " target="_blank"><%= skill.title %></a>
                  <% } else { %>
                    <p><%= skill.title %> </p>
                  <% } %>
                </h4>
                <div class="progress">
                  <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" style="width: <%= skill.progress%>%" aria-valuenow="<%= skill.progress %>" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
              </div>
